	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>windup-parent</artifactId>
		<groupId>org.jboss.windup</groupId>
		<version>0.6.8</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>windup-engine</artifactId>
	<name>Windup Engine</name>
	<description>The Engine for JBoss Windup.</description>
	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.4</version>
				<executions>
					
					<execution>
						<id>install-pegdown.jar</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>

						<inherited>false</inherited>
						<configuration>
							<file>lib/pegdown-1.2.2-DAVIS.jar</file>
							<groupId>pegdown</groupId>
							<artifactId>pegdown</artifactId>
							<packaging>jar</packaging>
							<pomFile>lib/pegdown-pom.xml</pomFile>
							<version>1.2.2-DAVIS</version>
							<generatePom>true</generatePom>
							<createChecksum>true</createChecksum>
						</configuration>
					</execution>
					
					<execution>
						<id>install-redline.jar</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>

						<inherited>false</inherited>
						<configuration>
							<file>lib/redline-1.2.jar</file>
							<groupId>redline</groupId>
							<artifactId>redline</artifactId>
							<packaging>jar</packaging>
							<version>1.2</version>
							<generatePom>true</generatePom>
							<createChecksum>true</createChecksum>
						</configuration>
					</execution>

					<execution>
						<id>install-jbpmmigration.jar</id>
						<phase>initialize</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>lib/jbpmmigration-0.12-SNAPSHOT.jar</file>
							<groupId>org.jbpm.jbpm5</groupId>
							<artifactId>jbpmmigration</artifactId>
							<packaging>jar</packaging>
							<version>0.12-SNAPSHOT</version>
							<generatePom>true</generatePom>
							<createChecksum>true</createChecksum>
						</configuration>
					</execution>

                                        <execution>
                                                <id>install-org.eclipse.cdt.core.jar</id>
                                                <phase>initialize</phase>
                                                <goals>
                                                        <goal>install-file</goal>
                                                </goals>
                                                <configuration>
                                                        <file>lib/org.eclipse.cdt.core_5.4.1.201209170703.jar</file>
                                                        <groupId>org.eclipse.cdt</groupId>
                                                        <artifactId>org.eclipse.cdt.core</artifactId>
                                                        <packaging>jar</packaging>
                                                        <version>5.4.1</version>
                                                        <generatePom>true</generatePom>
                                                        <createChecksum>true</createChecksum>
                                                </configuration>
                                        </execution>
				</executions>
			</plugin>

		</plugins>

	</build>

