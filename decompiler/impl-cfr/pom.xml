<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>org.jboss.windup.decompiler</groupId>
        <artifactId>decompiler-parent</artifactId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <artifactId>decompiler-cfr</artifactId>
    <packaging>jar</packaging>
    
    <name>Windup Engine - Decompiler CFR</name>
    
    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes><exclude>**/*.java</exclude></excludes>
            </resource>
        </resources>
        <plugins>
            
            <!-- Surefire -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <systemPropertyVariables>
                        <!-- Set JUL Formatting -->
                        <java.util.logging.SimpleFormatter.format>%1$tY-%1$tm-%1$td %1$tH:%1$tM:%1$tS %4$-6s %2$s %5$s%6$s%n</java.util.logging.SimpleFormatter.format>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
                  
            <!-- Forge addon creation -->
            <plugin>
                <groupId>org.jboss.forge.furnace</groupId>
                <artifactId>furnace-maven-plugin</artifactId>
                <executions> <execution> <id>generate-dot</id> <phase>prepare-package</phase> </execution> </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>  <execution>  <id>create-forge-addon</id>  <phase>package</phase>  </execution> </executions>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <!-- Project deps -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>decompiler-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- CFR -->
        <dependency>
            <groupId>org.benf.cfr</groupId>
            <artifactId>cfr-decompiler</artifactId>
            <version>0.79</version>
        </dependency>
        
        
        
        <!-- Tests -->
        <!--
        <dependency>
            <groupId>org.jboss.arquillian.junit</groupId>
            <artifactId>arquillian-junit-standalone</artifactId>
            <version>1.1.4.Final</version>
            <scope>test</scope>
        </dependency>
        -->
        
        <dependency>
            <groupId>org.jboss.windup.tools</groupId>
            <artifactId>decompiler-api</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <!-- Logging -->
        <!--
        <dependency>
            <groupId>org.apache.logging.log4j.adapters</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>2.0-beta4</version>
        </dependency>
        -->
        <dependency>
            <groupId>org.apache.logging.log4j.adapters</groupId>
            <artifactId>log4j-to-slf4j</artifactId>
            <version>2.0-beta4</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>2.0-rc1</version>
            <type>pom</type>
        </dependency>
    </dependencies>
    
</project>
